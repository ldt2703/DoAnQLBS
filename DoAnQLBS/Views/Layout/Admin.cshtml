<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css2?family=Alef:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="~/Content/NguoiDungCSSLayOut/styles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-info py-0 fixed-top">
        <a class="navbar-brand" href="~/Admin/Index">Trang Admin</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="side-bar">
                <li class="active">
                    <a href="~/Admin/Index">
                        <i class="fas fa-tachometer-alt fa-fw"></i>
                        Quản lý sản phẩm
                    </a>
                </li>
               
            </ul>

            <ul class="navbar-nav ml-auto">
               
                <li class="nav-item">
                    <a class="nav-link px-3" href="/Khachhang/DangXuat">
                        Đăng xuất
                    </a>
                </li>
            </ul>


        </div>
    </nav>

    <section class="content">

        <h1>Sản phẩm</h1>
        @RenderBody()
    </section>



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <script>
        $(document).ready(function () {
            "use strict";
            var height = $(window).height();
            var navbar_top = $('.navbar').outerHeight();
            var slide_bar = $('.side-bar').height();
            $('.content').css('min-height', height);
            $('.side-bar').css('top', navbar_top);
            $('.side-bar').css('height', height - navbar_top)
            $('.side-bar').css('height', height + 20)
        });
    </script>
</body>
</html>
