@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<DoAnQLBS.Models.SACH>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/Admin.cshtml";
}

<p>
    @Html.ActionLink("Thêm sách", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.First().NGAYCAPNHAT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SOLUONGTON)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NXB.TENNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CHUDE.TENCHUDE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Moi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.NGAYCAPNHAT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SOLUONGTON)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NXB.TENNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CHUDE.TENCHUDE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moi)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { @MaSach = item.MASACH }) |
                @Html.ActionLink("Xóa", "Delete", new { @MaSach = item.MASACH })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="Menu">
    @Html.PagedListPager(Model, Page => Url.Action("Details", new { Page = Page }))
</div>
<style>
    .Menu li {
        display: inline;
    }
</style>
